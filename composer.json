{
  "name": "vhs/hyperdrive",
  "description": "The fastest way to load pages in WordPress.",
  "keywords": ["wordpress", "wp", "performance", "plugin", "hyperdrive"],
  "homepage": "http://hyperdrive.vhs.codeberg.page",
  "license": "AGPL-3.0 or any later version",
  "authors": [{
    "name": "VHS",
    "email": "josh@vhs.codeberg.page",
    "homepage": "https://vhs.codeberg.page"
  }],
  "scripts": {
    "lint:config": "bin/lint-config.sh",
    "lint:plugin": "bin/lint-php.sh ./src",
    "test:plugin:unit": "bin/run-specs.php"
  },
  "type": "wordpress-plugin",
  "repositories": [{
    "url": "https://github.com/vhs/wp-enforcer.git",
    "type": "git"
  }],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.3"
  },
  "autoload": {
    "files": [
      "src/hyperdrive.php"
    ]
  },
  "require-dev": {
    "kahlan/kahlan": "^3.1",
    "stevegrunwell/wp-enforcer": "dev-master",
    "antecedent/patchwork": "^2.0"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "post-install-cmd": [
  	"wp-enforcer -c phpcs.ruleset.xml"
  ],
  "post-update-cmd": [
  	"wp-enforcer -c phpcs.ruleset.xml"
  ]
}
